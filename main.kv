MDBoxLayout:
    orientation: 'vertical'

    MDToolbar:
        title: 'Products Registration'
        right_action_items: [["file-pdf-box-outline", lambda x:app.open_settings_screen()]]


    MDFloatLayout:
        id: mainfloat
        size_hint: 1, .9

        MDTextField:
            id: description_field
            hint_text: 'Description'
            mode: 'rectangle'
            size_hint: .9, .085
            pos_hint: {'center_x':.5 , 'y':.92 }

        MDTextField:
            id: price_field
            hint_text: 'Price'
            mode: 'rectangle'
            size_hint: .9, .085
            pos_hint: {'center_x':.5 , 'y':.835 }
        
        MDTextField:
            id: date_field
            hint_text: 'Date'
            mode: 'rectangle'
            size_hint: .9, .085
            pos_hint: {'center_x':.5 , 'y':.75 }
            on_focus: app.show_date_picker()

        MDBoxLayout:
            spacing: '5dp'
            size_hint: .95, None
            pos_hint: {'center_x': .5, 'y': .67}

            MDRaisedButton:
                text: 'Insert'
                size_hint: .25, None
                on_release: app.insert_data()

            MDRaisedButton:
                text: 'Update'
                # md_bg_color: 0, 1, 0, 1
                size_hint: .25, None
                on_release: app.update_data()
            
            MDRaisedButton:
                text: 'Delete'
                # md_bg_color: 1, 0, 0, 1
                size_hint: .25, None
                theme_text_color: "Custom"
                text_color: 1, 1, 0, 1
                on_release: app.delete_data()

            MDRaisedButton:
                text: 'Cancel'
                size_hint: .25, None
            
        MDBoxLayout:
            id: datatable
            pos_hint: {'center_x': .5, 'y':.13}
            size_hint_x: .95


        MDBoxLayout:
            pos_hint: {'center_x': .5, 'y': .005}
            size_hint: .9, .8

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .2, .15
                MDBoxLayout:
                    Check:
                        size_hint: None, None
                        size: "38dp", "38dp"

                    MDLabel:
                        text: 'id'
                MDBoxLayout:
                    Check:
                        size_hint: None, None
                        size: "38dp", "38dp"
                    MDLabel:
                        text: 'Description'


            MDTextField:
                id: search
                hint_text: 'Search'
                mode: 'rectangle'
                size_hint_x: .7
                pos_hint: {'center_x':.5, 'y': .02}
                on_text: app.search()
                

<Check@MDCheckbox>:
    group: 'group'